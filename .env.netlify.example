# Netlify Environment Variables Example
# Copy these variables to your Netlify dashboard under Site Settings > Environment Variables

# REQUIRED: Application Configuration
NEXT_PUBLIC_APP_URL=https://your-app.netlify.app
TENANT_ID=your-tenant-id
NEXT_PUBLIC_TENANT_ID=your-tenant-id
NODE_ENV=production

# REQUIRED: Security
JWT_SECRET=generate-a-secure-32-character-string-here
NEXTAUTH_SECRET=generate-another-secure-32-character-string-here
NEXTAUTH_URL=https://your-app.netlify.app

# REQUIRED: Firebase Configuration (Client-side)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# REQUIRED: Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# REQUIRED: OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# REQUIRED: WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
WHATSAPP_VERIFY_TOKEN=generate-a-random-verify-token
WHATSAPP_APP_SECRET=your-whatsapp-app-secret

# OPTIONAL: Payment Processing (if using Stripe)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# OPTIONAL: Redis (recommended for production)
REDIS_URL=redis://your-redis-url

# OPTIONAL: Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# OPTIONAL: Admin Account
ADMIN_EMAIL=admin@your-domain.com
# Generate with: npm run generate-password-hash
ADMIN_PASSWORD_HASH=$2a$10$your-bcrypt-hash-here

# Feature Flags
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_AI_AGENT=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_ANALYTICS=true

# Performance Settings
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_AI_REQUESTS=10
AI_REQUEST_TIMEOUT_MS=30000

# Logging
LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90