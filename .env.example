# ==========================================
# LOCAI - Environment Variables Template
# ==========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# ==========================================
# FIREBASE CONFIGURATION (Client-side)
# ==========================================
# These are used for client-side Firebase SDK
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ==========================================
# FIREBASE ADMIN SDK (Server-side)
# ==========================================
# CRITICAL: These credentials provide full admin access to your Firebase project
# Get these from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key

FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app

# Note: The FIREBASE_PRIVATE_KEY must be wrapped in quotes and use \n for line breaks
# Example: "-----BEGIN PRIVATE KEY-----\nMIIEvgIBADANBgkqhki...\n-----END PRIVATE KEY-----\n"

# ==========================================
# OPENAI API
# ==========================================
# Used for Sofia AI Agent and other AI features
OPENAI_API_KEY=sk-your_openai_api_key_here

# ==========================================
# N8N INTEGRATION
# ==========================================
# N8N webhook URLs for AI agent functions
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/sofia
N8N_WEBHOOK_KEY=your_n8n_webhook_key

# ==========================================
# WHATSAPP MICROSERVICE
# ==========================================
# External WhatsApp service configuration (Baileys server)
WHATSAPP_MICROSERVICE_URL=http://your-whatsapp-server:3001
WHATSAPP_MICROSERVICE_API_KEY=your_whatsapp_api_key

# ==========================================
# AUTHENTICATION
# ==========================================
# JWT secret for token generation (min 32 characters for production)
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars_here

# Admin password hash (generate with: npm run generate-password-hash)
ADMIN_PASSWORD_HASH=your_bcrypt_password_hash_here

# ==========================================
# ABACATEPAY INTEGRATION
# ==========================================
# AbacatePay API configuration for payment processing
ABACATEPAY_API_KEY=your_abacatepay_api_key_here

# Cron job secret for scheduled tasks (generate a random string)
# Used to secure the /api/cron/sync-abacatepay endpoint
CRON_SECRET=your_random_secret_for_cron_jobs_min_32_chars

# Comma-separated list of tenant IDs to sync
# Example: TENANT_IDS=tenant123,tenant456,tenant789
TENANT_IDS=your_tenant_id_1,your_tenant_id_2

# ==========================================
# APPLICATION URLS
# ==========================================
# Public URL of your application (used for redirects and webhooks)
NEXT_PUBLIC_APP_URL=https://your-app-domain.com

# ==========================================
# ENVIRONMENT
# ==========================================
NODE_ENV=development

# ==========================================
# SECURITY NOTES
# ==========================================
# 1. NEVER commit files with actual values to Git
# 2. Rotate credentials regularly (every 90 days recommended)
# 3. Use different credentials for development and production
# 4. Store production credentials in your hosting platform's environment variables
#    (Netlify, Vercel, etc.) - NOT in .env files
# 5. Revoke any credentials that are accidentally exposed
