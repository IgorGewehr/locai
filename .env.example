# LocAI Environment Variables
# Copy this file to .env and fill in the values

# Next.js
NEXT_PUBLIC_APP_URL=https://your-app.up.railway.app
NODE_ENV=production

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Admin (Server-side)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-service@your-project.iam.gserviceaccount.com
FIREBASE_PROJECT_ID=your-project-id

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Tenant Configuration
DEFAULT_TENANT_ID=your-default-tenant-id

# WhatsApp (optional - for Meta Cloud API fallback)
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token

# Stripe (optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_or_live_key
STRIPE_SECRET_KEY=sk_test_or_live_key